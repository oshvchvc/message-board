<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
    <br>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="icon col-sm-1">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <div class="icon-caption">入力</div>
  </div>
  <div class="content col-sm-11">
    <%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
      <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %>
        </ul>
      </div>
      <% end %>
      
      
      <label>名前:
      <%= f.text_field :name %></label>
      <br>
      <br>
    
      <label>内容:
      <%= f.text_area :body, placeholder: '入力してください' %></label>
      <br>
      <label>　　　　　<%= f.submit '提出' %></label>
    <% end %>
    
  </div>
</div>