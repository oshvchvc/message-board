<div class="container">
  <div class="icon col-xs-1">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <div class="icon-caption">入力</div>
  </div>
  <div class="content col-xs-11">
    <%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
      <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %>
        </ul>
      </div>
      <% end %>
      
      <div class="form-group">
        <div class="col-xs-2">
          <%= f.label :name, "名前", class:"control-label" %>
        </div>
        <div class="col-xs-9">
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-xs-2">
          <%= f.label :body, "内容", class:"control-label" %>
        </div>
        <div class="col-xs-9">
          <%= f.text_area :body, size: "40x20", placeholder: '入力してください', class: "form-control" %>
        </div>
      </div>
      <div class="col-xs-2 col-xs-push-0"><%= f.submit '提出' %></div>
    <% end %>
    
  </div>
</div>





